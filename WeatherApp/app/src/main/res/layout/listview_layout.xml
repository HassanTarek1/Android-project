<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:visibility="visible">


    <ImageView
        android:id="@+id/imageView_list"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:baselineAlignBottom="false"
        android:contentDescription="@string/imageview_desc"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textView_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="9dp"
        android:layout_weight="0.3"
        android:contentDescription="@string/textview_list"
        android:text="@string/textview_list"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#E62C2C"
        android:textSize="24sp" />


</LinearLayout>
