<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/Relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#00FFFFFF"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imageView_list"

            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_weight="0.11"
            android:adjustViewBounds="true"
            android:contentDescription="@string/imageview_desc"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/textView_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/imageView_list"
            android:layout_toRightOf="@+id/imageView_list"
            android:contentDescription="@string/textview_list"
            android:text="@string/textview_list"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#E62C2C"
            android:textSize="24sp" />
    </RelativeLayout>

</LinearLayout>
